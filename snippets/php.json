{
	"Add Component Assets": {
		"prefix": "flyntComponentAssets",
		"body": [
			"use Flynt\\\\Features\\\\Components\\\\Component;",
			"",
			"add_action('wp_enqueue_scripts', function () {",
			"\tComponent::enqueueAssets('${1:ComponentName}'${2:, []});",
			"});"
		]
	},
	"Add Component Asset Dependency": {
		"prefix": "flyntComponentDependency",
		"body": [
			"[",
			"\t'name' => '$1',",
			"\t'path' => '${2:vendor/}',",
			"\t'type' => '${3:script|style}'",
			"],$4"
		]
	},
	"Add Component Data": {
		"prefix": "flyntComponentData",
		"body": [
			"add_filter('Flynt/addComponentData?name=${1:ComponentName}', function (\\$data${2:, \\$parentData, \\$config}) {",
			"\t$4",
			"",
			"\treturn \\$data;",
			"}${3:, 10, 3});"
		]
	},
	"Flynt Component Scaffolding": {
		"prefix": "flyntComponentScaffolding",
		"body": [
			"namespace Flynt\\\\Components\\\\${1:ComponentName};",
			"",
			"use Flynt\\\\Features\\\\Components\\\\Component;",
			"",
			"add_action('wp_enqueue_scripts', function () {",
			"\tComponent::enqueueAssets('${1:ComponentName}');",
			"});",
			"",
			"add_filter('Flynt/addComponentData?name=${1:ComponentName}', function (\\$data) {",
			"\treturn \\$data;",
			"});"
		]
	}
}